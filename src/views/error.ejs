<%- include('partials/header', {
    title: title,
    basePath: './'
}) %>

<%- include('partials/nav', { currentPage: '', basePath: './' }) %>

<!-- Error Section -->
<section class="hero" style="min-height: 70vh; margin-top: 80px;">
    <div class="hero-overlay" style="background: linear-gradient(135deg, rgba(204, 0, 0, 0.9) 0%, rgba(255, 107, 53, 0.9) 100%);"></div>
    <div class="hero-content">
        <div class="container">
            <div class="hero-text" style="text-align: center; max-width: 100%;">
                <h1 class="hero-title" style="font-size: 4rem; margin-bottom: 20px;">Oops!</h1>
                <h2 style="font-size: 2rem; margin-bottom: 20px;">Something Went Wrong</h2>
                <p class="hero-subtitle"><%= message %></p>
                <% if (error && error.stack) { %>
                    <pre style="text-align: left; background: rgba(0,0,0,0.3); padding: 20px; border-radius: 10px; margin-top: 30px; overflow-x: auto;">
                        <%= error.stack %>
                    </pre>
                <% } %>
                <div class="hero-cta" style="justify-content: center; margin-top: 40px;">
                    <a href="./" class="btn btn-primary">Go Home</a>
                    <a href="./contact" class="btn btn-secondary">Contact Support</a>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer', { basePath: './' }) %>

